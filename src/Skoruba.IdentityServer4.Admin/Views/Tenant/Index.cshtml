@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.IdentityServer4.Admin.BusinessLogic.Shared.Dtos.Common
@model Skoruba.IdentityServer4.Admin.BusinessLogic.Dtos.Configuration.Tenants.TenantsDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<h2>@Localizer["PageTitle"]</h2>

<a asp-action="Create" class="btn btn-outline-primary mb-3 mt-3"><span class="oi oi-plus"></span> @Localizer["ButtonAddTenant"]</a>

<div class="row">
	<div class="col-12">
		@await Html.PartialAsync("Common/Search", new Search { Action = "Index", Controller = "Tenant" })
	</div>
</div>

<div class="row">
	<div class="col-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>@Localizer["TableName"]</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var tenant in Model.Tenants)
					{
						<tr>
						    <th>
						        <a class="btn btn-primary" asp-action="Update" asp-route-id="@tenant.Id">@Localizer["TableButtonEdit"]</a>
						        @*<a class="btn btn-primary" asp-action="RoleUsers" asp-route-id="@tenant.Id">@Localizer["TableButtonUsers"]</a>*@
						    </th>
							<td>@tenant.Name</td>
							<td>
								<a class="btn btn-danger" asp-action="Delete" asp-route-id="@tenant.Id"><span class="oi oi-x"></span></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-12">
		@await Html.PartialAsync("Common/Pager", new Pager { Action = "Index", PageSize = Model.PageSize, TotalCount = Model.TotalCount })
	</div>
</div>